<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="master2.ForgetPassword" Title ="About us" BackgroundColor="#F2F2F2">
    <ContentPage.Content>
    <StackLayout>

    <Label Text = "Enter your Email Adress" HorizontalTextAlignment="Center" TextColor ="#1B5C9C" Margin="5,0,0,0"></Label>


    <Entry x:Name = "forgotPasswordEntry" Placeholder = "Enter email adress" Margin="0,0,10,0"/>

            <Button Text="Send" Clicked="Handle_Clicked_forgotPassword"/>
            
            <Label IsVisible = "false" Text="Your new password has been sent to your email address." x:Name="myLabel" />
            
        </StackLayout>

    </ContentPage.Content>
</ContentPage>